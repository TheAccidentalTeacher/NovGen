{
  "name": "novgen-backend",
  "version": "1.0.0",
  "description": "Backend API for NovGen - AI-powered novel generation platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "api",
    "novel",
    "generation",
    "ai",
    "openai",
    "express",
    "typescript",
    "mongodb"
